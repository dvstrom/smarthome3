<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelevisionActivity" 
    android:background="#000000">

    <ImageView
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/open"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/container"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="开启"
        android:background="@drawable/button_selector1"/>
    

    <Button
        android:id="@+id/close"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/open"
        
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="关闭"
        android:background="@drawable/button_selector1"/>
    <Button
        android:id="@+id/cool"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/container"
        android:layout_toRightOf="@id/open"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="制冷"
        android:background="@drawable/button_selector1"/>
    

    <Button
        android:id="@+id/hot"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/open"
        android:layout_toRightOf="@id/close"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="制热"
        android:background="@drawable/button_selector1"/>
    <Button
        android:id="@+id/flow1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/container"
        android:layout_toRightOf="@id/cool"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="风速+"
        android:background="@drawable/button_selector1"/>
    

    <Button
        android:id="@+id/flow2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/flow1"
        android:layout_toRightOf="@id/hot"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="风速-"
        android:background="@drawable/button_selector1"/>




</RelativeLayout>